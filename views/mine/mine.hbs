{{> navbar}}

<h1>Mine: </h1>

{{#if message}}
    {{message}}
{{/if}}

{{#if whenReady}}
    <div>Your resources will be gathered till: {{whenReady}}</div>
{{/if}}

<form action="/mine" method="POST">
    <label>
        <p>Gold:</p>
        <input type="number" name="minegold" placeholder="How many villagers..." min="1">
    </label>
    <label>
        <p>Wood:</p>
        <input type="number" name="minewood" placeholder="How many villagers..." min="1">
    </label>
    <label>
        <p>Stone:</p>
        <input type="number" name="minestone" placeholder="How many villagers..." min="1">
    </label>

    <button type="submit">Mine</button>
</form>